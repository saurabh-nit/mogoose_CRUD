<html>
</<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title></title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div></div>
    <table class="table table-striped table-bordered table-responsive">
    <thead>
      <tr class="success">
        <th>Serial No.</th>
        <th>Registration No.</th>
        <th>Roll No.</th>
        <th>Name</th>
        <th>Age</th>
        <th>College</th>
        <th>Address</th>
        <th>Action</th>

      </tr>
    </thead>
    <tbody>
     <% student.forEach(function(v,index){ %>
      <tr class="warning">
        <td><h6><%= (index+1) %></h6></td>
        <td><h6><%= v.regNo %></h6></td>
        <td><h6><%= v.rollNo %></h6></td>
        <td><h6><%= v.name.first+" "+v.name.last %></h6></td>
        <td><h6><%= v.ageOf %></h6></td>
        <td><h6><%= v.collegeName %></h6></td>
        <td><h6><%= v.address.cityName+" "+v.address.stateName+" "+v.address.countryName %></h6></td>
        <td>
          <button class="edit-btn" data-student-id="<%= v._id%>">Edit</button>
          <button class="delete-btn" data-student-id="<%= v._id%>">Delete</button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>





    <script>
      $(document).ready(function() {
        $(".edit-btn").click(function(e){
          e.preventDefault();
          window.location.href='/student/edit/'+$(this).data("student-id");
        })
      });
    </script>



    <script>

          $(".delete-btn").click(function(e){
            e.preventDefault();
            $.ajax({
                     type :"DELETE",
                    cache :false,
                      url :'/student/'+$(this).data("student-id"),
                  success : function(result){
                              console.log(result);
                              }
                   });
            window.location.href='/student/list/';
          });

   </script>
  </body>
</html>
